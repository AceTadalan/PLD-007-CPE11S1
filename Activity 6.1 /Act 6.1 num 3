#include <iostream> 
#include <cmath>
using namespace std;

double pesoToDollar(double peso){
    return peso / 59;
}

double dollarToPeso(double dollar){
    return dollar * 59;
}

int main(){
    
    int choice = 0;
    double value = 0;
    
    
    cout << "Choose 1 if Peso to Dollar" << endl;
    cout << "Choose 2 if Dollar to Peso" << endl;
    cout << "Enter 1 or 2: ";
    cin >> choice; 
    
    cout << "Enter the amount: ";
    cin >> value;


    if (choice == 1) {
        cout << "$ " << pesoToDollar(value) << endl;}
    else if (choice == 2) {
        cout << "â‚± " << dollarToPeso(value) << endl;}
    else {
        cout << "invalid choice please restart" << endl;}
     
    return 0;
}

